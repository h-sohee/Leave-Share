<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/frameLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="530dp"
    android:orientation="vertical"
    android:background="@color/colorLightGray"
    tools:context=".main.MainTabActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/dMemoSite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@color/colorGray"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:textStyle="bold"/>


        <EditText
            android:id="@+id/dMemoTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="메모제목을 입력하세요"
            android:textColorHint="@color/colorGray"
            android:textColor="@color/colorBlack"
            android:textSize="25dp"
            android:textStyle="bold"/>

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/dMemoView"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_gravity="center"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/dMemoDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@color/colorGray"
            android:textSize="15dp"
            android:textStyle="bold"/>

        <EditText
            android:id="@+id/dMemoContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="메보내용을 입력하세요."
            android:textColor="@color/colorBlack"
            android:textColorHint="@color/colorGray"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnModi"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                android:background="@color/colorGray"
                android:textColor="@color/colorBlack"
                android:text="수정"/>

            <Button
                android:id="@+id/btnDel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="10dp"
                android:background="@color/colorGray"
                android:textColor="@color/colorBlack"
                android:text="삭제"/>
        </LinearLayout>
    </LinearLayout>


</FrameLayout>